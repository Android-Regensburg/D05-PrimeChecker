<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/log_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:padding="20dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:orientation="vertical">

        <TextView
            android:id="@+id/prime_candidate_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123678123568712534"
            android:textAlignment="textStart"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/prime_candidate_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending ..."
            android:textAlignment="textStart"
            android:textSize="20sp" />



        <ProgressBar
            android:id="@+id/prime_candidate_pending_indicator"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:max="100"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:progress="1" />



    </LinearLayout>

    <TextView
        android:id="@+id/prime_candidate_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="30"
        android:text="Not A Prime"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="24sp" />

</LinearLayout>
